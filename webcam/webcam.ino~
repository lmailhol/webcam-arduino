#include <Servo.h>

Servo myservo;

int servoSpeed = 95; //vitesse de rotation du servomoteur continue
int valreception = 0; //valeurs reÃ§ues
String readSerial;

void setup() {
  Serial.begin(9600);
  myservo.attach(9);
  pinMode(9, OUTPUT); //broche en sortie
  myservo.write(servoSpeed); //position initiale
}

//void servoTurn() {
//  myservo.write(servoSpeed);
//  delay(200);
//  myservo.write(servoSpeed); 
//}

void loop() {
  if (Serial.available()>0) {
    char serialChar = Serial.read();
    readSerial += serialChar;
    delay(200);
    servoSpeed = readSerial.toInt();
  }
}
